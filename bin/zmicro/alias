#!/bin/bash

help() {
  echo "Usage:"
  echo "  zmicro fscan <args ...>"
  echo ""

  fscan --help
}

version() {
  fscan --version
}

core() {
  case $1 in
  -h | --help | help)
    help
    ;;
  -v | --version | version)
    version
    ;;
  *)
    fscan "$@"
    ;;
  esac
}

run() {
  core "$@"
}

run "$@"
